{
  "name": "@speckle/website",
  "description": "Speckle website. Built w/ Vue 3 & Nuxt 3",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "^18.19.0"
  },
  "scripts": {
    "build": "nuxt build",
    "dev:nuxt": "nuxt dev",
    "dev": "concurrently \"nuxt dev --host\"",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "yarn ensure:tailwind-deps && nuxt prepare",
    "lint:js": "eslint .",
    "lint:tsc": "vue-tsc --noEmit",
    "lint:prettier": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --check .",
    "lint:css": "stylelint \"**/*.{css,vue}\"",
    "lint": "yarn lint:js && yarn lint:tsc && yarn lint:prettier && yarn lint:css",
    "lint:ci": "yarn lint:tsc && yarn lint:css"
  },
  "dependencies": {
    "@apollo/client": "^3.7.14",
    "@headlessui/vue": "^1.7.13",
    "@heroicons/vue": "^2.0.12",
    "@jsonforms/core": "3.1.0",
    "@jsonforms/vue": "3.1.0",
    "@jsonforms/vue-vanilla": "3.1.0",
    "@pinia/nuxt": "^0.4.11",
    "@portabletext/vue": "^1.0.12",
    "@sanity/image-url": "^1.1.0",
    "@speckle/objectsender": "workspace:^",
    "@speckle/shared": "workspace:^",
    "@speckle/ui-components": "workspace:^",
    "@speckle/ui-components-nuxt": "workspace:^",
    "@tailwindcss/typography": "^0.5.16",
    "@vue/apollo-composable": "^4.0.0-beta.5",
    "@vueuse/core": "^9.13.0",
    "apollo-upload-client": "^17.0.0",
    "crypto-random-string": "^5.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "lodash-es": "^4.17.21",
    "nanoevents": "^8.0.0",
    "pinia": "^2.1.4",
    "portal-vue": "^3.0.0",
    "reka-ui": "^2.0.0",
    "subscriptions-transport-ws": "^0.11.0",
    "vee-validate": "4.7.0",
    "vue-tippy": "^6.2.0"
  },
  "devDependencies": {
    "@nuxt/eslint": "^0.3.13",
    "@nuxt/image": "1.9.0",
    "@nuxtjs/sanity": "1.13.3",
    "@nuxtjs/tailwindcss": "^6.7.0",
    "@parcel/watcher": "^2.4.1",
    "@types/apollo-upload-client": "^17.0.1",
    "@types/eslint": "^8.56.10",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18",
