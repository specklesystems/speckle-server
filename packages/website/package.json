    "autoprefixer": "^10.4.14",
    "concurrently": "^7.5.0",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vuejs-accessibility": "^2.3.0",
    "nuxt": "^3.15.4",
    "postcss": "^8.4.31",
    "postcss-custom-properties": "^12.1.9",
    "postcss-html": "^1.5.0",
    "postcss-nesting": "^10.2.0",
    "prettier": "^2.7.1",
