{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": ["main-frontend.js"],
  "extends": [
    "plugin:vue/recommended",
    "prettier",
    "prettier/vue",
    "plugin:prettier/recommended",
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["vue", "prettier"],
  "rules": {
    "arrow-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    //"array-bracket-spacing": [2, "always"],
    "block-spacing": [2, "always"],
    "camelcase": [
      1,
      {
        "properties": "always"
      }
    ],
    // "space-in-parens": [2, "always"],
    "keyword-spacing": 2,
    "semi": "off",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-var": 1,
    "no-console": 1,
    "space-unary-ops": [
      2,
      {
        "words": true,
        "nonwords": false
      }
    ]
  }
}
