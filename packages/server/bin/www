#!/usr/bin/env node
'use strict'

//need to initialize before everything else
//knex is a singleton controlled by module so can't wait til app init
const { initOpenTelemetry } = require('../dist/otel')
initOpenTelemetry()

const { logger } = require('../dist/logging/logging')
const { init, startHttp } = require('../dist/app')

init()
  .then(({ app, server }) => startHttp(server, app))
  .catch((err) => {
    logger.error(err, 'Failed to start server. Exiting with non-zero exit code...')

    // kill it with fire ðŸ”¥
    process.exit(1)
  })

// ðŸ’¥
